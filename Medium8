#include <stdio.h>

union Temperature {
    float celsius;
    float fahrenheit;
};

float celsiusToFahrenheit(float celsius) {
    return (celsius * 9.0 / 5.0) + 32.0;
}
float fahrenheitToCelsius(float fahrenheit) {
    return (fahrenheit - 32.0) * 5.0 / 9.0;
}

int main() {
    union Temperature temp;
    int choice;

    printf("Choose the temperature scale to input:\n");
    printf("1. Celsius\n");
    printf("2. Fahrenheit\n");
    printf("Enter your choice (1 or 2): ");
    scanf("%d", &choice);

    if (choice == 1) {
        printf("Enter temperature in Celsius: ");
        scanf("%f", &temp.celsius);
        printf("Temperature:\n");
        printf("Celsius: %.2f째C\n", temp.celsius);
        printf("Fahrenheit: %.2f째F\n", celsiusToFahrenheit(temp.celsius));
    } else if (choice == 2) {
        printf("Enter temperature in Fahrenheit: ");
        scanf("%f", &temp.fahrenheit);
        printf("Temperature:\n");
        printf("Celsius: %.2f째C\n", fahrenheitToCelsius(temp.fahrenheit));
        printf("Fahrenheit: %.2f째F\n", temp.fahrenheit);
    } else {
        printf("Invalid choice! Please enter 1 or 2.\n");
    }

    return 0;
}
